<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css">

    <title>
        <%= title %>
    </title>
</head>

<body>
    <!-- navbar -->
    <%- include('layouts/navbar') %>
        <h1>
            <!-- isian konten -->
            <%= title %>
        </h1>

        <% if (successFlash.length> 0) {%>
            <div class="alert alert-success" role="alert">
              <%= successFlash %>
            </div>
            <% } %>

        <div class="container table-responsive">
            <table class="table">
                <tbody>
                    <tr>
                        <th scope="row">ID</th>
                        <td>:</td>
                        <td>
                            <%= voter._id %>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Email</th>
                        <td>:</td>
                        <td>
                            <%= voter.email %>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Full Name</th>
                        <td>:</td>
                        <td>
                            <%= voter.fullname %>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Password</th>
                        <td>:</td>
                        <td>
                            <%= voter.password %>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Public Key</th>
                        <td>:</td>
                        <td>
                            <%= voter.public_key %>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Photo</th>
                        <td>:</td>
                        <td><img src="http://localhost/photo/voters/<%= voter.photo %>" alt="voter photo" width="160px" height="auto"> </td>
                    </tr>
                </tbody>
            </table>

            <% if (voting !== undefined) { %>
                <table class="table">
                    <tbody>
                        <tr>
                            <th scope="row">Index</th>
                            <td>:</td>
                            <td><%= voting.index %> </td>
                        </tr>
                        <tr>
                            <th scope="row">Previous Hash</th>
                            <td>:</td>
                            <td><%= voting.previousHash %> </td>
                        </tr>
                        <tr>
                            <th scope="row">Timestamp</th>
                            <td>:</td>
                            <td><%= voting.timestamp %> </td>
                        </tr>
                        <tr>
                            <th scope="row">Voter ID</th>
                            <td>:</td>
                            <td><%= voting.data.voterID %> </td>
                        </tr>
                        <tr>
                            <th scope="row">Candidate ID</th>
                            <td>:</td>
                            <td><%= voting.data.candidateID %> </td>
                        </tr>
                        <tr>
                            <th scope="row">Signature</th>
                            <td>:</td>
                            <td><%= voting.data.signature %> </td>
                        </tr>
                        <tr>
                            <th scope="row">hash</th>
                            <td>:</td>
                            <td><%= voting.hash %> </td>
                        </tr>
                        <tr>
                            <th scope="row">Difficulty</th>
                            <td>:</td>
                            <td><%= voting.difficulty %> </td>
                        </tr>
                        <tr>
                            <th scope="row">Nonce</th>
                            <td>:</td>
                            <td><%= voting.nonce %> </td>
                        </tr>
                    </tbody>
                </table>
            <% } %>
        </div>

        <!-- bootstrap script -->
        <script src="bootstrap/bootstrap.min.js"></script>
</body>

</html>