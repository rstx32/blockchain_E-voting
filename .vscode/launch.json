            "restart": true,
            "runtimeExecutable": "nodemon",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "name": "p2p",
            "program": "${workspaceFolder}/backend/p2p.js",
            "request": "launch",
            "restart": true,
            "runtimeExecutable": "nodemon",
